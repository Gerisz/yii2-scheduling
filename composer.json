{
  "name": "gerisz/yii2-scheduling",
  "description": "Scheduling extension for Yii2 framework",
  "keywords": [
    "yii",
    "scheduling",
    "cron"
  ],
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "Pavel Agalecky",
      "email": "pavel.agalecky@gmail.com"
    }
  ],
  "type": "yii2-extension",
  "require": {
    "php": ">=8.4.0",
    "yiisoft/yii2": "^2.0.53",
    "symfony/process": "2.6.* || 3.* || 4.* || 5.* || 6.* || 7.*",
    "dragonmantank/cron-expression": "1.*",
    "guzzlehttp/guzzle": "8.0.x-dev"
  },
  "require-dev": {
    "phpunit/phpunit": "12.3.*"
  },
  "suggest": {
    "guzzlehttp/guzzle": "Required to use the thenPing method on schedules (~5.0)."
  },
  "autoload": {
    "psr-4": {
      "gerisz\\scheduling\\": "src"
    }
  },
  "extra": {
    "bootstrap": "gerisz\\scheduling\\Bootstrap"
  },
  "scripts": {
    "test": "vendor/bin/phpunit"
  },
  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": true
    }
  }
}
